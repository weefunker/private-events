<div class="row">


  <div class="one-third column">&nbsp;</div>
  <div class="one-third column">
    <h1><%= @user.username %> <% if @user.events.any? %> events (<%= @user.events.count %>)</h1>
    <% end %>
  </div>
  <div class="one-third column">&nbsp;</div>
</div>

<% if @user.events.any? %>

<div class="strongbox">

  <h3>Future Events</h3>

  <ol class="future-events">
    <%= render @upcoming_events %>
  </ol>

</div>

<hr>

<div class="longbox">

  <h3>Past Events</h3>

  <ol class="events">
    <%= render @previous_events %>
  </ol>

</div>

<% end %>

<!-- Stolen from Javier -->
<!-- Used in rework before adding to Odin Project -->
<% unless  @user.attended_events.blank? %>
<h3><%= @user.username %> attended events</h3>
<% @user.events.each do |events| %>
<h3><%= events.title %></h3>
<% end %>
<% end %>